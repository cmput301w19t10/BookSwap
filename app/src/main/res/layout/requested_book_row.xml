<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#99ffffff"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/BRB_title_textview"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="137dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="53dp"
                android:text="Title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/BRB_author_textview"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/BRB_title_textview"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="53dp"
                android:text="Author" />

            <ImageView
                android:id="@+id/BRB_bookCover_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/BRB_owner_textview"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="137dp"
                android:layout_marginTop="101dp"
                android:layout_marginEnd="53dp"
                android:text="Owner" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>