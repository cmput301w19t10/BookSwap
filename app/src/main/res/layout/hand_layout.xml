<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Rview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="293dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/baseline_pan_tool_black_18dp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="53dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/layout_count_tv"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:background="@drawable/rounded_textview"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/layout_count_tv"
        app:layout_constraintEnd_toEndOf="@+id/layout_count_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/layout_count_tv"
        app:layout_constraintTop_toTopOf="@+id/layout_count_tv"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>