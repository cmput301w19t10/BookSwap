<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookswap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DummyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookMainActivity"
            android:parentActivityName=".DummyActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DummyActivity" />
        </activity>
        <activity
            android:name=".AvailableMainActivity"
            android:parentActivityName=".BookMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BookMainActivity" />
        </activity>
        <activity android:name=".BookActivity"
            android:parentActivityName=".AvailableMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AvailableMainActivity" />

        </activity>
    </application>

</manifest>